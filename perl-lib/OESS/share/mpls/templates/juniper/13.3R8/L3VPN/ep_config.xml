<configuration><groups><name>OESS</name>
  <interfaces>
    [% FOREACH interface IN endpoints %]
    <interface>
      <name>[% interface.interface %]</name>
      <unit>
        <name>[% interface.unit %]</name>
        <description>OESS-L3VPN-[% vrf_id %]</description>

        [% IF interface.defined('inner_tag') %]
        <vlan-tags>
          <outer>[% interface.tag %]</outer>
          <inner>[% interface.inner_tag %]</inner>
        </vlan-tags>
        [% ELSE %]
        <vlan-id>[% interface.tag %]</vlan-id>
        [% END %]

        <family>
          [% FOREACH peer IN interface.peers %]
          [% IF peer.ip_version == 'ipv4' %]
          <inet>
            [% IF interface.mtu %]<mtu>[% interface.mtu %]</mtu>[% END %]
            <address>
              <name>[% peer.local_ip %]</name>
            </address>
          </inet>
          [% END %]

          [% IF peer.ip_version == 'ipv6' %]
          <inet6>
            [% IF interface.mtu %]<mtu>[% interface.mtu %]</mtu>[% END %]
            <address>
              <name>[% peer.local_ip %]</name>
            </address>
          </inet6>
          [% END %]
          [% END %]
        </family>

      </unit>
    </interface>
    [% END %]
  </interfaces>

  [% FOREACH interface IN endpoints %]
  [% IF interface.bandwidth > 0 %]
  <class-of-service>
    <interfaces>
      <interface>
        <name>[% interface.interface %]</name>
        <unit>
          <name>[% interface.unit %]</name>
          <shaping-rate>
            <rate>[% interface.bandwidth %]m</rate>
          </shaping-rate>
        </unit>
      </interface>
    </interfaces>
  </class-of-service>
  [% END %]
  [% END %]

  <routing-instances>
    <instance>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <instance-type>vrf</instance-type>
      [% FOREACH interface IN endpoints %]
      <interface>
        <name>[% interface.interface %].[% interface.unit %]</name>
      </interface>
      [% END %]
      <route-distinguisher>
        <rd-type>[% switch.loopback %]:[% vrf_id %]</rd-type>
      </route-distinguisher>
      <vrf-import>OESS-L3VPN-[% vrf_id %]-IMPORT</vrf-import>
      <vrf-export>OESS-L3VPN-[% vrf_id %]-EXPORT</vrf-export>
      <vrf-table-label></vrf-table-label>
      <routing-options>
        <router-id>[% switch.loopback %]</router-id>
        <autonomous-system>
          <as-number>[% local_asn %]</as-number>
          <independent-domain></independent-domain>
        </autonomous-system>
      </routing-options>
      <protocols>
        <bgp>
          <log-updown/>

          <group>
            <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
            <family>
              <inet>
                <unicast>
                  <prefix-limit>
                    <maximum>[% prefix_limit %]</maximum>
                    <teardown>
                      <limit-threshold>90</limit-threshold>
                      <idle-timeout>
                        <timeout>30</timeout>
                      </idle-timeout>
                    </teardown>
                  </prefix-limit>
                </unicast>
              </inet>
            </family>

            <local-as>
              <as-number>[% local_asn %]</as-number>
            </local-as>

            [% FOREACH interface IN endpoints %]
              [% FOREACH peer IN interface.peers %]
                [% IF peer.ip_version == 'ipv4' %]
                <neighbor>
                  <name>[% peer.peer_ip FILTER remove('/\d+') %]</name>
                  <description>OESS-L3VPN-[% vrf_id %]</description>
                  <import>OESS-L3VPN-[% vrf_id %]-IN</import>

                  [% IF peer.md5_key %]<authentication-key>[% peer.md5_key %]</authentication-key>[% END %]

                  [% IF peer.bfd == 1 %]
                  <bfd-liveness-detection>
                    <minimum-interval>1000</minimum-interval>
                    <multiplier>3</multiplier>
                  </bfd-liveness-detection>
                  [% END %]

                  [% IF interface.cloud_interconnect_type == 'gcp-partner-interconnect' %]
                  <multihop>
                    <ttl>4</ttl>
                  </multihop>
                  [% END %]

                  <export>OESS-L3VPN-[% vrf_id %]-OUT</export>
                  <peer-as>[% peer.peer_asn %]</peer-as>
                </neighbor>
                [% END %]
              [% END %]
            [% END %]
          </group>

          <group>
            <name>OESS-L3VPN-[% vrf_id %]-BGP-V6</name>
            <family>
              <inet6>
                <unicast>
                  <prefix-limit>
                    <maximum>[% prefix_limit %]</maximum>
                    <teardown>
                      <limit-threshold>90</limit-threshold>
                      <idle-timeout>
                        <timeout>30</timeout>
                      </idle-timeout>
                    </teardown>
                  </prefix-limit>
                </unicast>
              </inet6>
            </family>

            <local-as>
              <as-number>[% local_asn %]</as-number>
            </local-as>

            [% FOREACH interface IN endpoints %]
              [% FOREACH peer IN interface.peers %]
                [% IF peer.ip_version == 'ipv6' %]
                <neighbor>
                  <name>[% peer.peer_ip FILTER remove('/\d+') %]</name>
                  <description>OESS-L3VPN-[% vrf_id %]</description>
                  <import>OESS-L3VPN-[% vrf_id %]-IN</import>

                  [% IF peer.md5_key %]<authentication-key>[% peer.md5_key %]</authentication-key>[% END %]

                  <export>OESS-L3VPN-[% vrf_id %]-OUT</export>
                  <peer-as>[% peer.peer_asn %]</peer-as>
                </neighbor>
                [% END %]
              [% END %]
            [% END %]
          </group>

        </bgp>
      </protocols>
    </instance>
  </routing-instances>

  <policy-options>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-EXPORT</name>
      <term>
	    <name>direct</name>
	    <from>
	      <protocol>direct</protocol>
	    </from>
	    <then>
	      <community>
	        <add/>
	        <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	      </community>
	      <accept/>
	    </then>
      </term>
      <term>
	    <name>bgp</name>
	    <from>
	      <protocol>bgp</protocol>
	    </from>
	    <then>
	      <community>
	        <add/>
	        <community-name>OESS-L3VPN-[% vrf_id %]</community-name>
	      </community>
	      <accept/>
	    </then>
      </term>
      <term>
	    <name>reject</name>
	    <then>
	      <reject/>
	    </then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-IMPORT</name>
      <term>
        <name>import</name>
        <from>
          <community>OESS-L3VPN-[% vrf_id %]</community>
        </from>
        <then>
          <accept/>
        </then>
      </term>
      <term>
        <name>reject</name>
        <then>
          <reject/>
        </then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-IN</name>
      <term>
	    <name>remove-comms-rt</name>
	    <then>
	      <community>
	        <delete/>
	        <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	      </community>
	      <next>term</next>
	    </then>
      </term>
      <term>
	    <name>import-bgp</name>
	    <from>
	      <protocol>bgp</protocol>
	    </from>
	    <then>
	      <community>
	        <add/>
	        <community-name>OESS-L3VPN-[% vrf_id %]-BGP</community-name>
	      </community>
	      <accept/>
	    </then>
      </term>
    </policy-statement>
    <policy-statement>
      <name>OESS-L3VPN-[% vrf_id %]-OUT</name>
      <term>
	    <name>remove-comms-rt</name>
	    <then>
	      <community>
	        <delete/>
	        <community-name>I2CLOUD-EXTENDED-TARGET</community-name>
	      </community>
	      <next>term</next>
	    </then>
      </term>
      <term>
	    <name>export-bgp</name>
	    <from>
	      <protocol>bgp</protocol>
	    </from>
	    <then>
	      <accept/>
	    </then>
      </term>
      <term>
	    <name>export-direct</name>
	    <from>
	      <protocol>direct</protocol>
	    </from>
	    <then>
          <community>
         	<add/>
            <community-name>OESS-L3VPN-[% vrf_id %]-BGP</community-name>
          </community>
          <accept/>
	    </then>
      </term>
    </policy-statement>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]</name>
      <members>target:[% local_asn %]:[% vrf_id %]</members>
    </community>
    <community>
      <name>OESS-L3VPN-[% vrf_id %]-BGP</name>
      <members>[% local_asn %]:[% vrf_id %]</members>
    </community>
  </policy-options>
</groups></configuration>
