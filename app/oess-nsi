use strict;
use warnings;

use OESS::NSI::Daemon;
use GRNOC::Log;
use GRNOC::Config;

use Getopt::Long;
use Data::Dumper;

use constant DEFAULT_CONFIG_FILE => '/etc/oess/nsi.conf';

my $config_file = DEFAULT_CONFIG_FILE;
my $nofork = 0;
my $debug = 0;
my $help;

GetOptions(
    'config=s' => \$config_file,
    'nofork' => \$nofork,
    'debug|d' => \$debug,
    'help|h' => \$help
);

usage() if($help);

my $config = new GRNOC::Config(
    'config_file' => $config_file,
    'force_array' => 0
    );

my $grnoc_log = new GRNOC::Log(
    'config' => $config->get('/config/logging/@config-file')
    );

my $nsi_daemon = new OESS::NSI::Daemon(
    'config_file' => $config_file,
    'daemonize' => !$nofork,
    'debug' => $debug
    );

$nsi_daemon->start();

sub usage {
    print "$0 [--config <config file>] [--nofork] [--debug] [--help]\n";
    exit(1);
}
